// Libraries
load(../instruments/oscillator/simple.js)
load(../instruments/percussion/simple.js)
load(demo.song.js)

// Instruments
instrument(iOscillatorSimple, osc)
instrument(iPercussionSimple, perc)

// Default note group
group()         // Group 'default'
start(beat)	    // Execute group 'beat'
n(osc,A4,1,sine)
n(osc,A3,.2,sawtooth)
p(.25)
n(osc,C4)
p(.25)
n(osc,C5)
p(.25)
n(osc,C6)
p(.25)

start(beat)	    // Execute group 'beat'
n(osc,Gs4,1,sine)
n(osc,A3,.2,sawtooth)
p(.25)
n(osc,C4)
p(.25)
n(osc,C5)
p(.25)
n(osc,C6)
p(.25)


group(beat)	    // Create group 'beat'
n(perc.kick)
p(.25)
n(perc.kick)     n(perc.snare)
p(.25)
